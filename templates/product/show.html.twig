{% extends 'layout.html.twig' %}

{% block title %}Product Details{% endblock %}

{% block body %}

    
    
    <div class="card mb-3">
        <div class="row g-0">
          <div class="col-md-4">
            <svg class="bd-placeholder-img figure-img img-fluid rounded" width="400" height="300" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: 400x300" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#868e96"></rect><text x="50%" y="50%" fill="#dee2e6" dy=".3em"></text></svg>
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title">{{product.name}}</h5>
              <p class="card-text">Code: {{product.code}}</p>
              <p class="card-text">Brand: {{product.brand}}</p>
              <h6 class="card-text">Price: U$ {{product.price}}</h6>
              <p class="card-text">Description:  {{product.description}}</p>
              <p class="card-text">
                  <small class="text-muted">Created At: {{product.createdAt | date ('Y-m-d')}}<br/>
                  Updated At: {{product.updatedAt | date ('Y-m-d')}}</small>
              </p>              
            </div>
          </div>
        </div>
      </div>

{% endblock %}